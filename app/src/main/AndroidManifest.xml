<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.jonathanwerner.leadsheets">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="net.jonathanwerner.leadsheets.di.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.jonathanwerner.leadsheets.components.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.jonathanwerner.leadsheets.DetailListActivity"
            android:label="@string/title_activity_detaillist"
            android:parentActivityName="net.jonathanwerner.leadsheets.components.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.jonathanwerner.leadsheets.components.main.MainActivity"/>
        </activity>
        <activity
            android:name="net.jonathanwerner.leadsheets.components.EditActivity"
            android:label="@string/title_activity_edit"
            android:parentActivityName="net.jonathanwerner.leadsheets.components.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.jonathanwerner.leadsheets.components.main.MainActivity"/>
        </activity>
    </application>

</manifest>
